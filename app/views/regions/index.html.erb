
<h2> All Regions </h2>



<%= link_to '--> Add a Favourite Region <--', new_region_path %>
<br>
<% if @current_user.present? %>
    <p><%= link_to 'Back to Cellar',user_path(@current_user.id), class: 'backtocellar' %></p>
<% end %>

<div id="regionpage">

    

    <div id="regionimage">    
        <img src="https://images.unsplash.com/photo-1506377247377-2a5b3b417ebb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" class="regionsimage">
    </div>

    <div id="regionindex">
        <ul>
        <% @regions.each do |region| %>
            <li>
                <%= link_to region.name, region_path(region.id) %>
            </li>
            <% end %>
        </ul>

    </div>


</div>