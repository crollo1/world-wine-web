
<h2><em><%= @region.name %></em>, <%= @region.country %></h2>

<p><%= link_to '--> Explore this Region <--', @region.video_url, target: '_blank' %> </p>
 <!--for youtube link??-->

<p><%= link_to 'Back to Regions', regions_path(@current_user.id), class: 'backtoregions' %></p>
<%= cl_image_tag(@region.image, class: 'region') %>
<br><br>

<% if @current_user.admin == true %>
    <%= link_to 'Edit', edit_region_path(@region.id) %>
    ||
    <%= link_to 'Delete', region_path(@region.id), method: 'delete', :data => { :confirm => 'Are you sure you want to delete?' } %>
<% end %>
<br>
