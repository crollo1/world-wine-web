
<h2>Create Account</h2>

<% if @user.errors.any? %>
    <strong class="errormsg"><em>Please correct the following errors: </em></strong>
    <ul>
        <% @user.errors.full_messages.each do |e| %>
        <li class="errorcreate"><%= e %></li>
        <% end %>
    </ul>
<% end %>
<br>
<%= form_with model: @user, local: true do |f| %>

    <%= f.label :name %>
    <br>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :email %>
    <br>
    <%= f.text_field :email %>
    <br><br>

    <%= f.label :password %>
    <br>
    <%= f.password_field :password %>
    <br><br>

    <%= f.label :password_confirmation %>
    <br>
    <%= f.password_field :password_confirmation %>
    <br><br>

    <%= f.submit %>


<% end %>
