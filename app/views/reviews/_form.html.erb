
<%= form_with model: @review, local: true do |f| %>


    <%= f.label :score %>
    <br>
    <%= f.number_field :score, in: 1..100, required: true %>
    <br><br>
    
    <%= f.label :description %>
    <br>
    <%= f.text_area :description, required: true %>
    <br><br>

    <%= f.collection_select :wine_id, Wine.all, :id, :name, include_blank: true %>


    <br><br>

    <%= f.submit %>

<% end %>